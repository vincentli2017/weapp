<!--new.wxml-->
<form bindsubmit="itemSubmit">
  <view class="field">
    <text>日期</text>
    <picker class="right" mode="date" name="date" value="{{date}}" bindchange="bindDateChange">
      <view>{{date}}</view>
    </picker>
  </view>
  <view wx:for="{{exercises}}">
    <view class="field">
    <text>训练名称</text>
    <input name="name" placeholder="卧推" />
  </view>

  <view class="field">
    <text>训练量</text>
    <textarea name="value" placeholder="4*100" />
  </view>
  </view>

  
  <button class="btn-action btn-bottom" form-type="submit">提交</button>
</form>

