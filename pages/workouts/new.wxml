<!--new.wxml-->
<form bindsubmit="itemSubmit">
  <view class="field">
    <text>日期</text>
    <picker class="right" mode="date" name="date" value="{{date}}" bindchange="bindDateChange">
      <view>{{date}}</view>
    </picker>
  </view>

  <view class="field">
    <view class="section__title">是否保存为日常</view>
    <switch name="switch"/>
  </view>

  <view class="field">
    <text>训练部位</text>
    <input name="name" value="{{exercises.name}}"/></view>

  <view class="field">
    <text>训练量</text>
    <textarea name="value" value="{{exercises.value}}"/></view>

  <button class="btn-action btn-bottom" form-type="submit">提交</button>
</form>

